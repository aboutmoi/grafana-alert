{
  "manifest_version": 3,
  "name": "Grafana Alert",
  "version": "1.0",
  "description": "Monitor Grafana dashboards and trigger sound alerts based on color changes",
  "icons": {
    "16": "icons/icon16.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["sounds/*"],
    "matches": ["<all_urls>"]
  }]
} 